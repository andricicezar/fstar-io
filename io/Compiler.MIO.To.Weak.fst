(** *** Importable instances **)

instance safe_importable_is_importable (#mst:mst) (#pi:policy_spec) (#rcs:tree (pck_rc mst)) (#fl:erased tflag) #t (d:safe_importable t mst pi rcs fl) : importable t mst pi rcs fl = {
  wtyp = d.swtyp;
  c_wtyp = solve;
  import = (fun x eff_rcs -> Inl (d.safe_import x eff_rcs))
}

instance importable_refinement
  #mst
  (#pi:policy_spec) (#rcs:tree (pck_rc mst)) (#fl:erased tflag)
  t {| d:importable t mst pi rcs fl |}
  (rp : t -> Type0) {| d1:checkable rp |} :
  Tot (importable (x:t{rp x}) mst pi rcs fl) = {
  wtyp = d.wtyp;
  c_wtyp = solve;
  import = (fun (x:d.wtyp) eff_rcs ->
    (match d.import x eff_rcs with
    | Inl x ->
      if d1.check x then Inl x 
      else Inr Contract_failure
    | Inr err -> Inr err) <: resexn (x:t{rp x}))
}
    
instance importable_option
  #mst
  (#pi:policy_spec) (#rcs:tree (pck_rc mst)) (#fl:erased tflag)
  t {| d:importable t mst pi rcs fl |} :
  Tot (importable (option t) mst pi rcs fl) = {
  wtyp = option d.wtyp;
  c_wtyp = solve;
  import = (fun (x:option d.wtyp) eff_rcs ->
    match x with
    | Some x' -> begin
      match d.import x' eff_rcs with
      | Inl x'' -> Inl (Some x'')
      | Inr err -> Inr err
    end
    | None -> Inr Contract_failure)
}

instance importable_pair
  #mst
  (#pi:policy_spec) (#rcs:(tree (pck_rc mst)){EmptyNode? rcs}) (#fl:erased tflag)
  t1 t2 {| d1:importable t1 mst pi (left rcs) fl |} {| d2:importable t2 mst pi (right rcs) fl |} :
  Tot (importable (t1 * t2) mst pi rcs fl) = {
  wtyp = d1.wtyp * d2.wtyp;
  c_wtyp = solve;
  import = (fun (x,y) eff_rcs ->
      match (d1.import x (left eff_rcs), d2.import y (right eff_rcs)) with
      | (Inl x, Inl y) -> Inl (x, y)
      | _ -> Inr Contract_failure)
}

instance importable_either
  #mst
  (#pi:policy_spec) (#rcs:(tree (pck_rc mst)){EmptyNode? rcs}) (#fl:erased tflag)
  t1 t2 {| d1:importable t1 mst pi (left rcs) fl |} {| d2:importable t2 mst pi (right rcs) fl |} :
  Tot (importable (either t1 t2) mst pi rcs fl) = {
  wtyp = either d1.wtyp d2.wtyp;
  c_wtyp = solve;
  import = (fun x eff_rcs ->
      match x with
      | Inl x' -> begin
        match d1.import x' (left eff_rcs) with
        | Inl x'' -> Inl (Inl x'')
        | Inr err -> Inr err
      end
      | Inr y -> begin
        match d2.import y (right eff_rcs) with
        | Inl y' -> Inl (Inr y')
        | Inr err -> Inr err
      end)
}

instance importable_dpair_refined
  #mst
  (#pi:policy_spec) (#rcs:(tree (pck_rc mst)){EmptyNode? rcs}) (#fl:erased tflag)
  t1 t2 (p:t1 -> t2 -> Type0)
  {| d1:importable t1 mst pi (left rcs) fl |} {| d2:importable t2 mst pi (right rcs) fl |}
  {| d3:checkable2 p |} :
  Tot (importable (x:t1 & y:t2{p x y}) mst pi rcs fl) = {
  wtyp = d1.wtyp & d2.wtyp;
  c_wtyp = solve;
  import = (fun ((x', y')) eff_rcs ->
      match (d1.import x' (left eff_rcs), d2.import y' (right eff_rcs)) with
       | (Inl x, Inl y) ->
            if check2 #t1 #t2 #p x y then Inl ((| x, y |) <: (x:t1 & y:t2{p x y})) else Inr Contract_failure
       | _ -> Inr Contract_failure)
}

(** *** Safe importable arrows **)
instance safe_importable_resexn
  #mst
  (#pi:policy_spec) (#rcs:tree (pck_rc mst)) (#fl:erased tflag)
  t1 {| d1:importable t1 mst pi rcs fl |} :
  Tot (safe_importable (resexn t1) mst pi rcs fl) = {
  swtyp = resexn d1.wtyp;
  c_swtyp = solve;
  safe_import = (fun x eff_rcs ->
      match x with
      | Inl x' -> d1.import x' eff_rcs 
      | Inr y -> Inr y)
}

#push-options "--compat_pre_core 1"
instance safe_importable_arrow
  #mst
  (#pi:policy_spec) (#rcs:(tree (pck_rc mst)){EmptyNode? rcs}) (#fl:erased tflag)
  (t1:Type) {| d1:exportable t1 mst pi (left rcs) fl |}
  (t2:Type) {| d2:importable t2 mst pi (right rcs) fl |} : 
  safe_importable ((x:t1) -> MIOpi (resexn t2) mst fl pi) mst pi rcs fl = {
  swtyp = d1.wtyp -> MIOpi (resexn d2.wtyp) mst fl pi;
  c_swtyp = solve;
  safe_import = (fun (f:d1.wtyp -> MIOpi (resexn d2.wtyp) mst fl pi) eff_rcs (x:t1) -> 
    (let x' = d1.export (left eff_rcs) x in 
     let y : resexn d2.wtyp = f x' in
     (safe_importable_resexn t2 #d2).safe_import y (right eff_rcs)) <: MIOpi (resexn t2) mst fl pi)
}
#pop-options

(** The following four should be unified but I had universe problems **)
let enforce_post_args_res
  (#t1:Type u#a)
  (#t2:Type u#b)
  #mst
  (#fl:erased tflag)
  (pi:policy_spec)
  (pre:t1 -> trace -> Type0)
  (post:t1 -> trace -> resexn t2 -> trace -> Type0)
  (irc : irc_typ t1 (resexn t2))
  (rc : rc_typ mst irc)
  (eff_rc : eff_rc_typ mst fl irc rc) 
  (c1post : squash (forall x h lt. pre x h /\ enforced_locally pi h lt ==> (post x h (Inr Contract_failure) lt)))
  (c2post : squash (forall x h r lt. pre x h /\ enforced_locally pi h lt /\ (irc x h r lt) ==> post x h r lt)) //idealized checj
  (f:t1 -> MIOpi (resexn t2) mst fl pi)
  (x:t1) :
  MIO (resexn t2) mst fl (pre x) (post x) by (explode ()) =
  let (| s0, h0, eff_rc' |) = eff_rc x in
  Classical.forall_intro (lemma_suffixOf_append h0);
  let r : resexn t2 = f x in
  Classical.forall_intro_2 (Classical.move_requires_2 (lemma_append_rev_inv_tail h0));
  if eff_rc' r then r
  else Inr Contract_failure

